@*
    Current character, word and line counts.
*@

<link rel="stylesheet" href="~/css/index.css" />

@{
    Components.Models.Buffer buffer;
    if (MenuActions.CurrentFileName == "Mock")
    {
        buffer = null;
    }
    else
    {
        buffer = Components.Models.ApplicationState.Instance.FileHandlerInstance.GetFileBuffer(MenuActions.CurrentFileName);
    }
}

        Characters: @buffer?.Counter.CharacterCount, Words: @buffer?.Counter.WordCount, Lines: @buffer?.Counter.LineCount

